{

  "manifest_version": 2,
  "name": "Favourites",
  "version": "1.2.1",
  "permissions": ["storage", "unlimitedStorage", "contextMenus", "activeTab"],

  "description": "Simple alternative to Firefox's bookmarks.",
  "homepage_url": "https://flosommerfeld.github.io",
  "author": "flosommerfeld",

  "icons": {
    "96": "icons/icon_96.png"
  },

  "background": {
  "scripts": ["background-script.js"]
  },

  "options_ui": {
    "page": "ui/settings.html"
  },

  "browser_action": {
    "default_icon": "icons/icon_96.png",
    "default_title": "Favourites",
    "default_popup": "ui/popup.html"
  },

  "applications": {
    "gecko": {
      "id": "favourites@flosommerfeld.addons",
      "strict_min_version": "42.0"
    }
  }

}
